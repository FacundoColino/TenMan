@model TenMan.Web.Models.CategoryViewModel

@{
    ViewData["Title"] = "Agregar Categoría de Expensa";
}

<div class="tenman-pagedesc">
    <p class="tenman-title">Agregar Categorías de Expensas</p>
    <p class="text-muted">Desde aquí puedes agregar categorías de expensas</p>
</div>
<div class="panel panel-default">
    <div class="panel-heading tenman-panel-heading2">
        Nueva Categoría
    </div>
    <div class="panel-body">
        <form asp-action="AddExpenseCategory">
            <input type="hidden" asp-for="CommitteeId" />
            @*<input type="hidden" asp-for="TenantId" />*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Letra" class="control-label"></label>
                <select asp-for="Letra" asp-items="@(new SelectList(Model.Letras))" class="form-control"></select>
                @*<span asp-validation-for="TenantId" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.CommitteeId" class="btn btn-success">Volver a Consorcio</a>
</div>
