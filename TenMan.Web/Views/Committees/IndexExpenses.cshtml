@model IEnumerable<TenMan.Web.Data.Entities.Expenses>

@{
    ViewData["Title"] = "Listado de expensas";
}

<h2>Unidades</h2>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Month)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Committee.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().DateLocal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Month)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Committee.Description)
            </td>
            <td>
                @if (item.DateLocal != DateTime.MinValue)
                {
                    @Html.DisplayFor(modelItem => item.DateLocal)
                }
             </td>
            <td>
                <a asp-action="ViewExpenses" asp-route-id="@item.Id" class="btn btn-info">Ver</a>
            </td>
        </tr>
        }
    </tbody>
</table>
