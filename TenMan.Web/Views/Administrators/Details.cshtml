@model TenMan.Web.Data.Entities.Administrator

@{
    ViewData["Title"] = "Detalles del Administrador";
}

<div class="tenman-pagedesc">
    <p class="tenman-title">Detalles del Administrador</p>
    <p class="text-muted">Desde aquí puedes editar y cambiar cualquier información sobre el administrador</p>
</div>
<div class="panel panel-default">
    <div class="panel-heading tenman-panel-heading2">
        @Model.User.FullName
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.User.UserName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User.UserName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CUIT)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CUIT)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.RegisterNumber)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.RegisterNumber)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.User.FullName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User.FullName)
            </dd>
            <dt>
                Telefono
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User.PhoneNumber)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.User.Address)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User.Address)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.User.Document)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User.Document)
            </dd>
        </dl>
        <div class="btn-toolbar mb-3">
            <div class="btn-group">
                <a asp-controller="Committees" asp-action="AddUnit" class="btn btn-default" asp-route-id="@Model.Id">Unidades</a>
                <a asp-controller="Committees" asp-action="AddField" class="btn btn-default" asp-route-id="@Model.Id">Rubros de Gasto</a>
                <a asp-controller="Committees" asp-action="AddWorker" class="btn btn-default" asp-route-id="@Model.Id">Contratistas</a>
                <a asp-controller="Committees" asp-action="ExpenseSummarySettings" class="btn btn-default" asp-route-id="@Model.Id">Opciones</a>
            </div>
            <div class="btn-group me-2">
                @*<a asp-controller="Expenses" asp-action="CurrentExpense" class="btn btn-secondary" asp-route-id="@Model.Expenses.Where(e => e.Current = true).First().Id">Liquidación Actual</a>*@
                @*<a asp-controller="Committees" asp-action="CalculateExpenses" class="btn btn-danger" asp-route-id="@Model.Id">Calcular Expensas</a>*@
                <a asp-controller="Committees" asp-action="ExpenseSummary" class="btn btn-danger" asp-route-id="@Model.Id">Calcular Expensas</a>
                @*<a aspxxx-controller="Committees" asp-action="ViewExpenses" class="btn btn-info" asp-route-id="@Model.Id">Ver Expensas</a> |*@
                <a asp-controller="Committees" asp-action="IndexExpenses" class="btn" asp-route-id="@Model.Id">Ver Expensas</a>
                <a asp-controller="Expenses" asp-action="Index" class="btn" asp-route-id="@Model.Id">Ver Expensas 2</a>
                <a asp-action="Index" class="btn btn-success">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>
<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
        <a href="#tab1" aria-controls="tab1" role="tab" data-toggle="tab">
            General
        </a>
    </li>
</ul>
<div class="tab-content" style="margin-top:15px">
    <div role="tabpanel" class="tab-pane active" id="tab1">
        @if (Model.Committees.Count == 0)
        {
            <h5>Este administrador aún no dispone de consorcios</h5>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-heading tenman-panel-heading2">
                    Consorcios
                </div>
                <div class="panel-body">
                    <p>
                        <a asp-controller="Committees" asp-action="Create" class="btn btn-primary" asp-route-id="@Model.Id">Agregar Consorcio</a>
                    </p>
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Committees.FirstOrDefault().Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Committees.FirstOrDefault().Address)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Committees.FirstOrDefault().SuterhKey)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Committees.FirstOrDefault().CUIT)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Committees.FirstOrDefault().Neighborhood)
                                </th>
                                <th>
                                    Unidades
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Committees)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SuterhKey)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CUIT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Neighborhood)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Units.Count)
                                    </td>
                                    <td>
                                        <a asp-action="EditUnit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="glyphicon glyphicon-pencil"></i></a> |
                                        <a asp-action="DetailsUnit" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="glyphicon glyphicon-eye-open"></i></a> |
                                        <a asp-action="DeleteUnit" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="glyphicon glyphicon-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>