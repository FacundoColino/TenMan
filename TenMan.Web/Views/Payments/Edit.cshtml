@model TenMan.Web.Models.PaymentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @* Si no guardo los campos que no pido en el Edit como hidden se pierden *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UnitId" />
            <input type="hidden" asp-for="Unit.CheckingAccount.Id" />
            <input type="hidden" asp-for="Unit.CheckingAccount.Balance" />
            <input type="hidden" asp-for="Unit.CheckingAccount.PreviousBalance" />
            <input type="hidden" asp-for="Unit.CheckingAccount.Number" />
            <input type="hidden" asp-for="Unit.Apartment" />
            <input type="hidden" asp-for="Date" />
            <input type="hidden" asp-for="Tenant.User.Id" />
            <input type="hidden" asp-for="Tenant.User.Document" />
            <input type="hidden" asp-for="Tenant.User.LastName" />
            <input type="hidden" asp-for="Tenant.User.FirstName" />
            <input type="hidden" asp-for="TenantId" />
            @*<div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <label asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>*@
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" readonly class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" name="status">
                    <option value="Aprobado">Aprobado</option>
                    <option value="Pendiente">Pendiente</option>
                    <option value="Rechazado">Rechazado</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Usuario</label>
                <input asp-for="Tenant.User.UserName" class="form-control" />
                <span asp-validation-for="Tenant.User.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit.UnitFullName" class="control-label"></label>
                <input asp-for="Unit.UnitFullName" disabled readonly class="form-control" />
                <span asp-validation-for="Unit.UnitFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit.CheckingAccount.Balance" class="control-label"></label>
                <input asp-for="Unit.CheckingAccount.Balance" disabled readonly class="form-control" />
                <span asp-validation-for="Unit.CheckingAccount.Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit.CheckingAccount.PreviousBalance" class="control-label"></label>
                <input asp-for="Unit.CheckingAccount.PreviousBalance" disabled readonly class="form-control" />
                <span asp-validation-for="Unit.CheckingAccount.PreviousBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit.CheckingAccount.Total" class="control-label"></label>
                <input asp-for="Unit.CheckingAccount.Total" disabled readonly class="form-control" />
                <span asp-validation-for="Unit.CheckingAccount.Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PdfFile" class="control-label"></label>
                <input asp-for="PdfFile" class="form-control" />
                <span asp-validation-for="PdfFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Volver a Pagos</a>
</div>

