@model TenMan.Web.Models.RequestViewModel

@{
    ViewData["Title"] = "Crear";
}

<h2>Agregar Solicitud</h2>

<h4>Solicitud</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UnitId" /> @*De lo contrario llega nulo*@
            <input type="hidden" asp-for="StatusTypeId" />
            <input type="hidden" asp-for="StartDate" />
 
            <div class="form-group">
                <label asp-for="SpecialtyId" class="control-label"></label>
                <select asp-for="SpecialtyId" asp-items="Model.Specialties" class="form-control"></select>
                <span asp-validation-for="SpecialtyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" type="text" class="form-control" disabled />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remarks" class="control-label"></label>
                <textarea asp-for="Remarks" class="form-control"></textarea>
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                <label asp-for="UnitId" class="control-label"></label>
                <select asp-for="UnitId" asp-items="Model.Units" class="form-control"></select>
                <span asp-validation-for="UnitId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="DetailsUnit" asp-route-id="@Model.UnitId" class="btn btn-success">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
