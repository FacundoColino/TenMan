@model TenMan.Web.Models.ReceiptImageViewModel

@{
    ViewData["Title"] = "Agregar Comrpobante";
}

<h2>Agregar Comrpobante</h2>

<h4>Gasto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddReceiptImage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ExpenseCostId" />
            <input type="hidden" asp-for="FixedCostId" />

            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
                <a asp-action="DetailsProperty" asp-route-id="@Model.Id" class="btn btn-success">Volver a la Solicitud</a>
            </div>
        </form>
    </div>
</div>
