@model IEnumerable<TenMan.Web.Data.Entities.Expenses>

@{
    ViewData["Title"] = "Liquidaciones de Expensas";
}
<div class="tenman-pagedesc">
    <p class="tenman-title">Liquidaciones de Expensas</p>
    <p class="text-muted">Expensas liquidadas y por liquidar</p>
</div>
<div class="panel panel-default">
    <div class="panel-heading tenman-panel-heading2">
        Expensas
    </div>
    <div class="panel-body">
        <p>
            <a asp-action="Create" class="btn btn-primary">Liquidación actual</a>
        </p>
        <table class="table table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Month)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Year)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        Consorcio
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Month)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Committee.Address)
                        </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning btn-xs" asp-route-id="@item.Id"><i class="glyphicon glyphicon-pencil"></i></a> |
                            <a asp-action="Details" class="btn btn-info btn-xs" asp-route-id="@item.Id"><i class="glyphicon glyphicon-eye-open"></i></a> |
                            <a asp-action="Delete" class="btn btn-danger btn-xs" asp-route-id="@item.Id"><i class="glyphicon glyphicon-trash"></i></a> |
                            <a asp-action="ViewSettlement" class="btn btn-primary" asp-route-id="@item.Id">Previsualizar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
